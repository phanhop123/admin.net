@model WebOnline.Models.EF.Category
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home Page</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Category" class="nav-link">Category</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Category" class="nav-link">Add Category</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add Category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Category</a></li>
                    <li class="breadcrumb-item"><a href="#">Add</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">More information added to the new category</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name Category</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Name Category" })
                        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Describe</label>
                        @Html.TextAreaFor(x => x.Descriptione, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Seo Title</label>
                        @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                        <div class="form-group">
                            <label for="exampleInputEmail1">numerical order</label>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @Value="1" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">SeoDescriptione</label>
                        @Html.TextAreaFor(x => x.SeoDescriptione, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">SeoKeywords</label>
                        @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        <a href="/admin/category" class="btn btn-danger">Back</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                </div>
                  
                }

            </div>
        </div>
    </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->



